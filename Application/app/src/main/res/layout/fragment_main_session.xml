<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient_blue_50_blue_200"
    >
    <com.isel_5gqos.common.NestedFocusingScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="75dp"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/throughput_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/serving_cell_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/strongest_neighbor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/number_of_cells_same_tech_as_serving"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                />

        </LinearLayout>

    </com.isel_5gqos.common.NestedFocusingScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>