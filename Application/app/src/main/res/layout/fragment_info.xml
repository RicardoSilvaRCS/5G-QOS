<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/info_view"
            android:layout_height="24dp"
            android:layout_width="match_parent"
            android:background="@drawable/purple_200_background"
            app:layout_constraintTop_toTopOf="@id/fragment_container_view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/info_view"
            app:layout_constraintBottom_toBottomOf="@id/info_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="INFO"
            />
        <TextView
            android:id="@+id/info_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/info_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="This is where the main info goes"
            />
        <View
            android:id="@+id/database_info_view"
            android:layout_height="24dp"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/purple_200_background"
            app:layout_constraintTop_toBottomOf="@id/info_main"
            />
        <TextView
            android:id="@+id/database_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/database_info_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="DATABASE INFO"
            />
        <LinearLayout
            android:id="@+id/database_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/database_info_txt"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File: "/>
                <TextView
                    android:id="@+id/database_file_path_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Path..."
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: "/>
                <TextView
                    android:id="@+id/database_size_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="112KB"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SD card: "/>
                <TextView
                    android:id="@+id/device_free_storage_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="188 260 MB free space"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/device_info_view"
            android:layout_height="24dp"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/purple_200_background"
            app:layout_constraintTop_toBottomOf="@id/database_info_layout"
            />
        <TextView
            android:id="@+id/device_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/device_info_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="DEVICE INFO"
            />
        <LinearLayout
            android:id="@+id/device_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/device_info_txt"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "/>
                <TextView
                    android:id="@+id/device_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xiaomi Mi 10...(etc)"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android: "/>
                <TextView
                    android:id="@+id/android_version_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMEI SW: "/>
                <TextView
                    android:id="@+id/android_imei_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A in Android10+"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/info_sim_info"
            android:layout_height="24dp"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/purple_200_background"
            app:layout_constraintTop_toBottomOf="@id/device_info_layout"
            />
        <TextView
            android:id="@+id/sim_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/info_sim_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="SIM INFO"
            />
        <LinearLayout
            android:id="@+id/sim_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/sim_info_txt"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMSI: "/>
                <TextView
                    android:id="@+id/imsi_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A in Android10+"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operator: "/>
                <TextView
                    android:id="@+id/operator_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOS"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/N: "/>
                <TextView
                    android:id="@+id/sn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A in Android10+"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>